#include <stdio.h> // Include header file for input/output manipulation
int main() { // Create main() function
int max, step; // Declare int variable's
double fahr ,min; // Declare the  floating-point double variable's

// Define the int variables
min = 0;
max = 300;
step = 20;

printf("°C\t\t°F"); // Print heading of temperature
for ( min = 0; min <= max; min += step ) //  Loop Fahrenheit temperature from 0 to 300 that growly 20 for each ripetitions
{
  fahr =(min * 1.8) + 32; // Write expression for convertion ( Celsius to Fahr)
  printf("\n%f\t\t%f\n", min, fahr ); // Print the variables that contain the two temperauture format
}
return 0; // Return 0 in case of execution code success
}
